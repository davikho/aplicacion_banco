<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_marginHorizontal="10dp"
    android:layout_height="match_parent"
    tools:context=".calculadorApp.MainActivity2">
    <EditText
        android:id="@+id/etNum1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa un número"
        android:inputType="number" />
    <EditText
        android:id="@+id/etNum2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa un segundo número"
        android:inputType="number" />



    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/black"
        android:padding="4dp"
        android:layout_height="wrap_content">
        <!--boton para sumar-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSumar"
            android:layout_margin="2dp"
            android:textSize="20sp"
            android:background="#D81919"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+" />
        <!--boton para restar-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRestar"
            android:layout_margin="2dp"
            android:textSize="20sp"
            android:background="#0C51DB"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" />
        <!--boton para mutiplicar-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMultiplicar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:background="#AEEA00"
            android:layout_margin="2dp"
            android:text="*" />
        <!--boton para dividir-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDividir"
            android:textSize="20sp"
            android:background="#F6D10E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="/" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvMostrarRespuesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textSize="20sp"
        android:text="Mostrar Resultado" />


</LinearLayout>